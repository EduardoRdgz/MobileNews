<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="MobileNews" parent="Theme.Material3.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color_dark</item>
        <item name="colorOnPrimary">@color/primary_color_light</item>
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="colorOnSurface">@color/black</item>
        <item name="backgroundColor">@color/secondary_color</item>
    </style>

    <style name="MobileNews.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MobileNews.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>